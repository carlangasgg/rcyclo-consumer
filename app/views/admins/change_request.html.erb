<div class="container">
  <div class="row">
    <div class="col-md-12">

    <h1 align="center">Validación Cambios de datos de Compañias</h1>
    </div>
  </div>
  <hr>

  <div class="row">

    <!--left col-->
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">Listados de Peticiones de Cambio</div>
        

          <div class="table-responsive">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Nombre(Actual)</th>
                        <th>Nombre(Nuevo)</th>
                        <th>Email(Actual)</th>
                        <th>Email(Nuevo)</th>
                        <th>Direccion(Actual)</th>
                        <th>Direccion(Nueva)</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>

                  <%@change["change"].each_with_index do |chan,index|%>
                  
                    <tr>
                        <td><%= index+1 %></td>
                        <td><%= @change["comp"][index]["name"]%></td>
                        <td><%= chan["name"]%></td>
                        <td><%= @change["comp"][index]["email"]%></td>
                        <td><%= chan["email"]%></td>
                        <td><%= @change["comp"][index]["address"]%></td>
                        <td><%= chan["address"]%></td>
                        <td><%= link_to 'Aceptar', admins_accept_change_request_path(:change_id => chan["id"]), :data => {:confirm => '¿Está seguro que desea actualizar este registro?'}, :class => "btn btn-success btn-md", method: :post %></td>

                    </tr>

                  <%end%>
                </tbody>
            </table>
          </div>
        </div>
      </div>
      
    </div>
  
    <div class="col-sm-2 col-sm-offset-10"><%= link_to "Inicio", admins_index_path, class: "  btn btn-default btn-lg btn-block" %>
    </div>
  </div>