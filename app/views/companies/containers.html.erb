    <hr>

    <div class="row">
  		<div class="col-sm-3"><!--left col-->

          <div class="panel panel-default">
            <div class="panel-heading">Opciones</div>
            <div class="panel-body"><%= link_to "Solicitar un contenedor", companies_request_container_path %></div>
          </div>

          <ul class="list-group">
            <li class="list-group-item text-muted">Resumen</i></li>
            <li class="list-group-item text-right"><span class="pull-left"><strong>Totales</strong></span> <%= @containers.count %></li>
