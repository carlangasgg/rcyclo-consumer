                    <tr>
                      <th>#</th>
                      <th>Título</th>
                      <th>Dirección</th>
                      <th>Descripción</th>
                      <th>Última modificación</th>
                    </tr>
                  </thead>
                  <tbody id="items">
                    <% @containers.each_with_index do |cont, index| %>
                      <tr>
                        <td><%= index + 1 %> </td>
                        <td><%= cont["title"] %></td>
                        <td><%= cont["address"] %></td>
                        <td><%= cont["description"] %></td>
                        <td><%= cont["updated_at"] %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div><!--/table-resp-->

             </div><!--/tab-pane-->
