<div class="container">
  <h1>Contenedores</h1>

  <hr>

  <div class="row">

    <!--left col-->
    <div class="col-sm-3">

      <ul class="list-group">
        <li class="list-group-item text-muted">Resumen</i></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Totales</strong></span> <%= @data["containers_empty"] + @data["containers_half"] + @data["containers_full"] %></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Llenos</strong></span> <%= @data["containers_full"] %></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Medios</strong></span> <%= @data["containers_half"] %></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Vacios</strong></span> <%= @data["containers_empty"] %></li>
      </ul>

      <%= link_to "Solicitar un contenedor", companies_request_container_path, class: "	btn btn-success btn-lg btn-block" %>

    </div>

    <div class="col-sm-9">
      <ul class="nav nav-tabs" id="myTab">
        <li class="active"><a href="#home" data-toggle="tab">Activos</a></li>
        <li><a href="#messages" data-toggle="tab">En espera</a></li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane active" id="home">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Título</th>
                  <th>Dirección</th>
                  <th>Descripción</th>
                  <th>Última modificación</th>
                  <th>Modificar estado</th>
                </tr>
              </thead>
              <% @data["containers"].each_with_index do |cont, index| %>
              <tr>
                <td><%= index + 1 %> </td>
                <td><%= cont["title"] %></td>
                <td><%= cont["address"] %></td>
                <td><%= cont["description"] %></td>
                <td><%= cont["updated_at"] %></td>
                <td>
                  <div class="dropdown">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                      <% case cont["status_id"] when 1 %> Vacío
                        <% when 2 %> Medio
                        <% when 3 %> Lleno
                      <% end %>
                      <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                      <% unless cont["status_id"] == 1 %>
                        <li><%= link_to "Vacío", companies_update_state_container_path(:container_id => cont["id"], :status_id => 1) %></li>
                      <% end %>
                      <% unless cont["status_id"] == 2 %>
                        <li><%= link_to "Medio", companies_update_state_container_path(:container_id => cont["id"], :status_id => 2) %></li>
                      <% end %>
                      <% unless cont["status_id"] == 3 %>
                        <li><%= link_to "Lleno", companies_update_state_container_path(:container_id => cont["id"], :status_id => 3) %></li>
                      <% end %>
                    </ul>
                  </div>
                </td>
              </tr>
              <% end %>
            </table>
          </div>
        </div>

        <div class="tab-pane" id="messages">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Título</th>
                  <th>Dirección</th>
                  <th>Última modificación</th>
                </tr>
              </thead>
              <% @data["containers_waiting"].each_with_index do |cont, index| %>
              <tr>
                <td><%= index + 1 %> </td>
                <td><%= cont["title"] %></td>
                <td><%= cont["address"] %></td>
                <td><%= cont["updated_at"] %></td>
              </tr>
              <% end %>
            </table>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>
