<% if flash[:container_erased] %>
  <div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
      <div class="alert alert-success">
          <a class="close" data-dismiss="alert">&times;</a>
          <%= flash[:container_erased] %>
      </div>
    </div>
    <div class="col-md-4"></div>
  </end>
<% end %>

<div class="container">
  <div class="row">

    <!-- main right col -->
    <div class="column col-sm-12" id="main">
      <div class="padding">
        <div class="full col-sm-10">

          <!-- content -->
          <div class="row">

            <!-- main col left -->
            <div class="col-sm-4 col-sm-offset-2">

              <div class="panel panel-default">
                <div class="panel-thumbnail"><img src="http://bligoo.com/media/users/0/38747/images/LOGO%20ORIGINAL_trascender_nuevo.jpg" class="img-responsive"></div>
                <div class="panel-body">
                  <p class="lead"><%= @establishment["name"] %></p>

                  <hr>

                  <p>Ubicación: <%= @establishment["address"] %></p>

                </div>
              </div>


            </div>

            <!-- main col right -->
            <div class="col-sm-6">
              
              <div class="panel panel-default">
                <div class="panel-heading"> <h4>Resumen de contenedores</h4></div>
                <div class="panel-body">
                      <ul class="list-group">
                        <li class="list-group-item text-right"><span class="pull-left"><strong>Total</strong></span> <%= @data["containers_empty"] + @data["containers_half"] + @data["containers_full"] %></li>
                        <li class="list-group-item text-right"><span class="pull-left"><strong>Llenos</strong></span> <%= @data["containers_full"] %></li>
                        <li class="list-group-item text-right"><span class="pull-left"><strong>Medios</strong></span> <%= @data["containers_half"] %></li>
                        <li class="list-group-item text-right"><span class="pull-left"><strong>Vacios</strong></span> <%= @data["containers_empty"] %></li>
                      </ul>
                      <%= link_to "Ver contenedores", establishments_containers_path, class: " btn btn-success btn-lg btn-block" %>
                </div>
              </div>

              

            </div>

          </div>


        </div>
      </div>
    </div>

  </div>
</div>
