<div class="container">
  <h1>Contenedores</h1>

  <hr>

  <div class="row">

    <!--left col-->
    <div class="col-sm-3">

      <ul class="list-group">
        <li class="list-group-item text-muted">Resumen</i></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Totales</strong></span> <%= @data["containers_empty"] + @data["containers_half"] + @data["containers_full"] %></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Llenos</strong></span> <%= @data["containers_full"] %></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Medios</strong></span> <%= @data["containers_half"] %></li>
        <li class="list-group-item text-right"><span class="pull-left"><strong>Vacios</strong></span> <%= @data["containers_empty"] %></li>
      </ul>

    </div>

    <div class="col-sm-9">
      <ul class="nav nav-tabs" id="myTab">
        <li class="active"><a href="#home" data-toggle="tab">Activos</a></li>
        <li><a href="#messages" data-toggle="tab">Solicitudes</a></li>
      </ul>

      <div class="tab-content">
        <div class="tab-pane active" id="home">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Título</th>
                  <th>Dirección</th>
                  <th>Última modificación</th>
                  <th>Modificar estado</th>
                  <th></th>
                </tr>
              </thead>
              <tbody id="items">
                <% @data["containers"].each_with_index do |cont, index| %>
                <tr>
                  <td><%= index + 1 %> </td>
                  <td><%= cont["title"] %></td>
                  <td><%= cont["address"] %></td>
                  <td><%= cont["updated_at"] %></td>
                  <td>
                    <div class="dropdown">
                      <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                        <% case cont["status_id"] when 1 %> Vacío
                          <% when 2 %> Medio
                          <% when 3 %> Lleno
                        <% end %>
                        <span class="caret"></span>
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                        <% unless cont["status_id"] == 1 %>
                          <li><%= link_to "Vacío", establishments_update_state_container_path(:container_id => cont["id"], :status_id => 1) %></li>
                        <% end %>
                        <% unless cont["status_id"] == 2 %>
                          <li><%= link_to "Medio", establishments_update_state_container_path(:container_id => cont["id"], :status_id => 2) %></li>
                        <% end %>
                        <% unless cont["status_id"] == 3 %>
                          <li><%= link_to "Lleno", establishments_update_state_container_path(:container_id => cont["id"], :status_id => 3) %></li>
                        <% end %>
                      </ul>
                    </div>
                  </td>
                  <td>
                    <%= link_to 'Eliminar', establishments_delete_container_path(:id_container => cont["id"]), :data => {:confirm => '¿Esta seguro que desea eliminar este contenedor?'}, :class => "btn btn-danger btn-sm", method: :post %>
                  </td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>

        <div class="tab-pane" id="messages">
          <div class="table-responsive">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Título</th>
                  <th>Dirección</th>
                  <th>Aceptar solicitud</th>
                </tr>
              </thead>
              <tbody id="items">
                <% @data["containers_request"].each_with_index do |cont, index| %>
                <tr>
                  <td><%= index + 1 %> </td>
                  <td><%= cont["title"] %></td>
                  <td><%= cont["address"] %></td>
                  <td><%= link_to "Aceptar", establishments_accept_container_request_path(:container_id => cont["id"]) %></td>

                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    </div>

  </div>

</div>
