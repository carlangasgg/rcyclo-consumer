<div>
  <h1 align="center">Regístrate como Institución</h1>
</div>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <%= form_tag controller: "establishments", action: "register", method: "post", :class => "form-signin" do %>
      <div class="form-group">
        <%= text_field_tag :name, '', class: "form-control", placeholder: "Nombre" %>
      </div>
      <div class="form-group">
        <%= text_field_tag :address, '', class: "form-control", placeholder: "Dirección" %>
      </div>
      <div class="form-group">
        <%= text_field_tag :email, '', class: "form-control", placeholder: "Email" %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password, '', class: "form-control", placeholder: "Contaseña" %>
      </div>
      <div class="form-group">
        <%= password_field_tag :password_confirmation, '', class: "form-control", placeholder: "Confirme contraseña" %>
      </div>

      <%= submit_tag "Registrar", class: "btn btn-success btn-lg btn-block" %>
    <% end %>
    <hr>
      <span><%= link_to "Inicia sesión", establishments_sign_in_path, class: "btn btn-link btn-lg btn-block" %></span>
  </div>
  <div class="col-md-5"></div>
</div>
